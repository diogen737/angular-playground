{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [ "node_modules/@types" ],
    "lib": [ "es2017", "dom" ],
    "paths": {
      "@app/*": [ "src/app/*" ],
      "@shared/*": [ "src/app/shared/*" ],
      "@model/*": [
        "src/app/auth/model/*",
        "src/app/charts/model/*",
        "src/app/material/model/*",
        "src/app/shared/model/*"
      ],
      "@providers/*": [
        "src/app/auth/providers/*",
        "src/app/charts/providers/*",
        "src/app/shared/providers/*",
      ]
    }
  }
}
